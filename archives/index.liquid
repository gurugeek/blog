extends: default.liquid
---
<div >
  <div>
    <h2>Archives</h2>
    {% for post in posts %}
      <div>
        <h5>{{post.date | date: "%d %b %Y"}}</h5>
        <h4><a href="{{post.path}}">{{ post.title }}</a></h4>
        {{post.content | truncatewords: 25, '...' }}
      </div>
    {% endfor %}
  </div>
</div>
